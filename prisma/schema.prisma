generator client {
  provider = "prisma-client-js" // Gera o cliente Prisma em JavaScript/TypeScript
}

datasource db {
  provider = "postgresql"
}

// Meu modelo para a tabela de usuários
model User {
  id            String           @id @default(uuid())
  name          String
  email         String           @unique
  password      String
  createdAt     DateTime         @default(now())
  phone         String?
  gender        String?
  city          String?
  profilePic    String?
  birthDate     DateTime?
  focusSession  FocusSession[]  //Relação (1-M): 1 usuário pode ter muitas sessões
}

// Modelo para a tabela de sessões de foco
model FocusSession {
  id            String   @id @default(uuid()) // Identificador único automático
  description   String   // A atividade em que você focou
  typeActivity  String   // Tipo de atividade (ex: estudo, trabalho, leitura). Será uma tag no frontend, selecionada como select.
  startTime     DateTime // Quando a sessão começou
  endTime       DateTime // Quando a sessão terminou
  duration      Int      // Duração em segundos, que vamos salvar
  createdAt   DateTime @default(now()) // Data em que o registro foi criado

  // Informações do usuário a quem pertence a sessão de foco
  userId      String      // Como se fosse uma 'label' para o id do usuário
  user        User     @relation(fields: [userId], references: [id]) // Conexão com a tabela User
}